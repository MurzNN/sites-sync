{
  "name": "sites-sync",
  "version": "0.2.0",
  "description": "Tools for automate sync of dynamic data (content like database and files) between sites via ssh.",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "bin": {
    "sites-sync": "sites-sync"
  },
  "scripts": {
    "sites-sync": "/usr/bin/env -S node --loader ts-node/esm --no-warnings ./dist/index.js",
    "postinstall": "tsc --build"
  },
  "dependencies": {
    "@tuplo/envsubst": "^1.13.0",
    "dotenv": "^8.2.0",
    "js-yaml": "^4.0.0",
    "pretty-bytes": "^5.5.0",
    "ts-node": "^10.4.0",
    "yargs": "^16.2.0",
    "yargs-unparser": "^2.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.0",
    "@types/yargs": "^17.0.7",
    "@types/yargs-unparser": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^7.0",
    "prettier": "1.9.1",
    "prettier-eslint": "^10.1.0",
    "typescript": "^4.5.4"
  }
